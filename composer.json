{
  "name": "therealsujitk/flarum-ext-hljs",
  "description": "Integrate your forum with highlight.js.",
  "keywords": [
    "highlight.js",
    "hljs",
    "code",
    "syntax",
    "highlighting"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/therealsujitk/flarum-ext-hljs/issues",
    "source": "https://github.com/therealsujitk/flarum-ext-hljs",
    "forum": "https://discuss.flarum.org/d/23229"
  },
  "homepage": "https://therealsuji.tk",
  "require": {
    "flarum/core": "^1.0"
  },
  "authors": [
    {
      "name": "Sujit Kumar",
      "role": "Developer",
      "email": "me@therealsuji.tk"
    }
  ],
  "autoload": {
    "psr-4": {
      "Therealsujitk\\Hljs\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "highlight.js",
      "category": "formatting",
      "icon": {
        "image": "icon.svg",
        "backgroundColor": "#ff9c59",
        "backgroundSize": "cover",
        "backgroundPosition": "center"
      }
